<controls:MetroWindow x:Class="FinancialForecasting.Desktop.Views.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:desktop="clr-namespace:FinancialForecasting.Desktop"
                      xmlns:viewModels="clr-namespace:FinancialForecasting.Desktop.ViewModels"
                      mc:Ignorable="d"
                      GlowBrush="{StaticResource AccentColorBrush}"
                      BorderThickness="1"
                      WindowStartupLocation="CenterScreen"
                      Title="Financial Forecasting"
                      SizeToContent="WidthAndHeight">
    <Window.DataContext>
        <DataTemplate DataType="viewModels:MainViewModel" />
    </Window.DataContext>
    <TabControl>
        <TabItem Header="Calculation">
            <Grid Margin="10,10,10,20" Height="Auto" Width="500">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="100" />
                    <RowDefinition Height="100" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <CheckBox Grid.Row="0" Grid.Column="0" Content="X1"
                                           IsChecked="{Binding Solving.IsX1Enabled}" />
                    <CheckBox Grid.Row="0" Grid.Column="1" Content="X2"
                                           IsChecked="{Binding Solving.IsX2Enabled}" />
                    <CheckBox Grid.Row="0" Grid.Column="2" Content="X3"
                                           IsChecked="{Binding Solving.IsX3Enabled}" />
                    <CheckBox Grid.Row="1" Grid.Column="0" Content="X4"
                                           IsChecked="{Binding Solving.IsX4Enabled}" />
                    <CheckBox Grid.Row="1" Grid.Column="1" Content="X5"
                                           IsChecked="{Binding Solving.IsX5Enabled}" />
                    <CheckBox Grid.Row="1" Grid.Column="2" Content="C"
                                           IsChecked="{Binding Solving.IsCEnabled}" />
                </Grid>
                <TextBox Text="{Binding Solving.Result, Mode=OneWay}" Grid.Row="1" IsEnabled="False"
                         TextAlignment="Center" FontSize="32" TextWrapping="Wrap" />
                <Button Grid.Row="2" Content="Solve shit"
                        Command="{Binding Solving.SolveCommand}"
                        CommandParameter="{Binding Migration.Indices}" />
            </Grid>
        </TabItem>
        <TabItem Header="Data">
            <Grid Height="500" Width="500">
                <DataGrid ItemsSource="{Binding Migration.Indices}" Style="{StaticResource AzureDataGrid}" />
            </Grid>
        </TabItem>
        <TabItem Header="Migration">
            <Grid Margin="10,10,10,20" Height="300" Width="500">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100" />
                    <RowDefinition Height="100" />
                    <RowDefinition Height="100" />
                </Grid.RowDefinitions>
                <ProgressBar Grid.Row="0" Width="500" Height="30"
                             Maximum="{Binding Migration.NumberOfRows}"
                             Value="{Binding Migration.CurrentRow}" />
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <TextBox Height="30" Width="470" IsEnabled="False" Text="{Binding Migration.FilePath}" />
                    <Button Height="30" Width="30" Content="..." Command="{Binding Migration.SelectFileCommand}" />
                </StackPanel>
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                    <Button Content="Start" Margin="10,0" Width="100" Height="30"
                            Command="{Binding Migration.StartMigrationCommand}" />
                    <Button Content="Stop" Margin="10,0" Width="100" Height="30" />
                </StackPanel>
            </Grid>
        </TabItem>
    </TabControl>
</controls:MetroWindow>